{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib":["es6", "es2016", "es2017",  "DOM"],
    "importHelpers": true,
    "declaration": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators":true,
    "rootDir": "./src",
    "types": ["node","jest"],
    "strict": true,
    "noUnusedLocals": true,
    
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
